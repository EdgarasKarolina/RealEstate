@model IEnumerable<RealEstate.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>@Html.DisplayName(RealEstate.Resources.AdminManagementTexts.
                                    AdminManagementTexts.ManageUsers)</h2>

<div class="col-md-4">
    <a class="btn btn-success" id="button-in-admin-main-view" href="@Url.Action("Create", "ApplicationUsers")">
        <div class="be-in-middle">
            @Html.DisplayName(RealEstate.Resources.AdminManagementTexts.
                                    AdminManagementTexts.CreateNewUser)
        </div>
    </a>
</div>
<div class="col-md-4">
    <a class="btn btn-success" id="button-in-admin-main-view" href="@Url.Action("Index", "Role")">
        <div class="be-in-middle">
            @Html.DisplayName(RealEstate.Resources.AdminManagementTexts.
                                    AdminManagementTexts.ManageRoles)
        </div>
    </a>
</div>

<table class="table" style="margin-top:20px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>     
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
